{
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "plugins": [
    "babel"
  ],
  "root": true,
  "rules": {
    "array-bracket-spacing": [2, "never"],
    "arrow-spacing": 2,
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "comma-spacing": 2,
    "comma-style": 2,
    "consistent-return": 2,
    "curly": 2,
    "eol-last": 2,
    "func-call-spacing": 2,
    "indent": [2, 2, { "SwitchCase": 1 }],
    "key-spacing": [2, { "beforeColon": false }],
    "keyword-spacing": 2,
    "no-bitwise": 2,
    "no-else-return": 2,
    "no-global-assign": 2,
    "no-lonely-if": 2,
    "no-multiple-empty-lines": 2,
    "no-native-reassign": 2,
    "no-nested-ternary": 2,
    "no-spaced-func": 2,
    "no-template-curly-in-string": 2,
    "no-trailing-spaces": 2,
    "no-unneeded-ternary": 2,
    "no-unsafe-negation": 2,
    "no-var": 1,
    "no-warning-comments": 1,
    "babel/object-curly-spacing": [2, "always"],
    "object-shorthand": 2,
    "padded-blocks": [2, "never"],
    "prefer-const": 2,
    "prefer-template": 2,
    "require-yield": 0,
    "semi": 2,
    "strict": [2, "never"],
    "space-before-blocks": 2,
    "space-before-function-paren": [2, {
      "anonymous": "always",
      "asyncArrow": "always",
      "named": "never"
    }],
    "space-in-parens": [2, "never"],
    "space-infix-ops": 2,
    "space-unary-ops": [2, { "words": true, "nonwords": false }]
  }
}
